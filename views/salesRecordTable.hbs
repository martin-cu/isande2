                        </ul>
                    </nav>
                </div>
                !-->
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        $('#ipi-table').DataTable({
            paging: true,
            searching: false,
            ordering: false,
            pageLength: 10,
            lengthChange: false
        });
    });
</script>