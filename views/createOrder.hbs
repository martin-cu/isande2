<div class="container-fluid">
    <div class="d-sm-flex justify-content-between align-items-center mb-4">
        <h3 class="text-dark mb-0" style="color: rgb(0,0,0);">Sales Order Form</h3>
    </div>
    <div class="row">
        <div class="col" style="height: 600px;background: rgba(233,235,237,0);margin-top: -20px;">
            <div class="card">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item"><div class="nav-link active">Order Number: {{{drCount}}}</div></li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <form action="/create_sales" method="post" autocomplete="off" id="salesForm">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th style="width: 1px;">Date Scheduled</th>
                                        <th style="width: 50px;"><input type="date" id="dateScheduled" name="dateScheduled" required=""></th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                    <tr></tr>
                                    <tr>
                                        <td style="font-weight: bold;">Customer Information</td>
                                        <td style="width: 50px;"></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td style="font-weight: normal;">Customer</td>
                                        <td>
                                            <div class="autocomplete">
                                                <input type="text" name="customerName" id="customerName" required="">
                                            </div>
                                        </td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td style="font-weight: normal;">Customer Address</td>
                                        <td><select id="saleAddress" name="saleAddress" style="height: 28px;padding-top: 3px;padding-bottom: 3px;font-size: 16px;width: 200px;" disabled required=""></select></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td style="font-weight: bold;"></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td style="font-weight: bold;">Order Details</td>
                                        <td style="width: 0px;"></td>
                                        <td style="width: 0px;font-weight: bold;">Payment</td>
                                        <td style="width: 0px;"></td>
                                    </tr>
                                    <tr>
                                        <td style="font-weight: normal;">Product</td>
                                        <td style="width: 100px;"><select style="height: 28px;padding-top: 3px;padding-bottom: 3px;font-size: 12px;width: 150px;" required="" id="product" name="product">
                                                {{#each products}}
                                                    <option value="{{product_id}}">{{product_name}}</option>
                                                {{/each}}
                                            </select></td>
                                        <td style="width: 100px;">Payment Terms</td>
                                        <td style="width: 100px;"><select id="paymentTerms" name="paymentTerms" style="height: 28px;padding-top: 3px;padding-bottom: 3px;font-size: 12px;width: 150px;" required="">
                                                <option value="Cash" selected="">Cash</option>
                                                <option value="NET7">NET7</option>
                                                <option value="NET15">NET15</option>
                                                <option value="NET30">NET30</option>
                                            </select></td>
                                    </tr>
                                    <tr>
                                        <td style="font-weight: normal;">Quantity</td>
                                        <td><input type="text" required="" id="qty" name="qty"><input class="form-control-plaintext d-inline-flex" type="text" readonly value="bag/s" style="margin-left: 10px;width: 42px;"></td>
                                        <td>Order Type</td>
                                        <td>
                                            <div>
                                                <fieldset >
                                                    <div class="custom-control custom-radio"><input type="radio" id="customRadio1" class="custom-control-input" name="orderType" checked="" value="Delivery"><label class="custom-control-label" for="customRadio1">Delivery</label></div>
                                                    <div class="custom-control custom-radio"><input type="radio" id="customRadio2" class="custom-control-input" name="orderType" value="Pick-up"><label class="custom-control-label" for="customRadio2">Pick-up</label></div>
                                                </fieldset>
                                                <fieldset></fieldset>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="font-weight: normal;">Total Price</td>
                                        <td style="font-weight: normal;"><input type="text" id="total" readonly="" style="background: rgb(237,237,237);"><input class="form-control-plaintext d-inline-flex align-items-xl-center" type="text" value="pesos" readonly="" style="margin-left: 10px;width: 50px;"></td>
                                        <td><span class="pickup" hidden>Pick-up Plate No.</span></td>
                                        <td style="font-weight: normal;">
                                            <div class="autocomplete" >
                                                <input type="text" name="pickup_plate" id="pickup_plate" class="pickup" hidden>
                                            </div>
                                        </td>
                                        
                                    </tr>
                                </tbody>
                            </table>
                        </form>
                    </div>
                    <button class="btn btn-primary active text-center float-right d-xl-flex justify-content-xl-end align-items-xl-start" type="submit" form="salesForm">Next</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var tab = 'createSaleOrder';
    var obj = {};
    var locs = {};
    var customers = [];
    var customers_arr = [];

    var productPrices = [];
    var productObj = {};
    var selectedProduct = {{products.[0].selling_price}}; 
    {{#each products}}
        productObj = {};
        productObj['product_id'] = {{this.product_id}};
        productObj['product_name'] = '{{this.product_name}}';
        productObj['purchase_price'] = {{this.purchase_price}};
        productObj['selling_price'] = {{this.selling_price}};
        productPrices.push(productObj);
    {{/each}}


    {{#each customers}}
        obj = {};
        obj['customer_name'] = '{{this.customer_name}}';
        obj['customer_id'] = '{{this.customer_id}}';
        obj['locations'] = [];

        customers_arr.push('{{this.customer_name}}');
        {{#each this.locations}}
            locs = {};
            locs['location_id'] = '{{this.location_id}}';
            locs['location_name'] = '{{this.location_name}}';
            obj['locations'].push(locs);
        {{/each}}
        customers.push(obj);
    {{/each}}
</script>

<script src="../assets/js/formFormatter.js"></script>