                        <div class="col-auto"><i class="fas fa-calendar fa-2x text-gray-300"></i></div>
                    </div>
                </div>
            </a></div>
        </div>
    </div>
    {{/compareTwoValues}}
    {{#compareTwoValues view 'Logistics' operator="==="}}
