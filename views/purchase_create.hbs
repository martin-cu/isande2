                                <thead>
                                    <tr>

                                        <th style="width: 200px; font-weight: 500;">Pick-up Date</th>
                                        <th style="width: 50px;"><input class="form-control" type="date" required="" id="date" name="date"><span style="font-size: 1.2rem; font-weight: 500;"id="date_review"></span></th>
                                        <th style="width: 0px;font-weight: bold;"></th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="text-nowrap" style="font-weight: bold;">Order Details</td>
                                        <td style="width: 50px;"></td>
                                        <td style="width: 0px;font-weight: bold;"></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                    <tr></tr>
                                    <tr>
                                        <td style="font-weight: normal;">Supplier LO</td>
                                        <td class="text-nowrap" style="padding: 0px; padding-top: 0.5rem; padding-bottom: 0.5rem;"><input id="purchase_lo" name="purchase_lo" class="form-control" type="number" required=""  min="0" style="width: 200px; height: 2rem; margin-left: 5px;"><span style="font-size: 1.2rem; " id="purchase_lo_review"></span></td>
                                        <td style="width: 0px;"></td>
                                        <td style="font-weight: normal;">Supplier SO</td>
                                        <td class="text-nowrap" style="padding: 0px; padding-top: 0.5rem; padding-bottom: 0.5rem;"><input id="purchase_so" name="purchase_so" class="form-control" type="number" min="0" style="width: 200px; height: 2rem; margin-left: 5px;"><span style="font-size: 1.2rem;" id="purchase_so_review"></span></td>
                                    </tr>
                                    <!-- <tr>
                                        <td style="font-weight: bold;"></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr> -->
                                    <tr>
                                        <td style="font-weight: normal;">Product</td>
                                        <td style="width: 400px;"><select class="form-control" style="height: 28px;padding-top: 3px;padding-bottom: 3px;font-size: 12px;width: 150px; height: 2rem" required="" id="purchase_product" name="purchase_product">      
                                                <option value="1" selected>FCC</option>
                                                <option value="2">RCC</option>
                                            </select>
                                            <span style="font-size: 1.2rem;" id="purchase_product_review"></span>
                                        </td>
                                        <td style="width:100px;font-weight: bold;"></td>
                                        <td style="width: 0px;font-weight: bold;"></td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td style="font-weight: normal;">Quantity</td>
                                        <td class="text-nowrap" style="padding: 0px; padding-top: 0.5rem; padding-bottom: 0.5rem;"><div style="display: flex;"><input class="form-control" id="p_qty" name="qty" type="number" required="" style="width: 200px; height: 2rem; margin-left: 5px;" min="1"><span style="font-size: 1.2rem; " id="p_qty_review"></span><input class="form-control-plaintext" type="text" value="bag/s" readonly="" style="margin-left: 1rem;width: 42px;padding: 0px;"></div></td>
                                        <td></td>
                                        <td style="width: 150px; text-align: left;"><span style="width: 100%; float: right;">Product price</span></td>
                                        <td style="width: 0px; text-align: left;"><span id="product_price" name="product_price"></span><span style="font-size: 0.9rem"> Php</span></td>
                                        
                                    </tr>
                                    <tr style="">
