<div class="container-fluid">
    <div class="d-sm-flex justify-content-between align-items-center mb-4">
        <h3 class="text-dark mb-0" style="color: rgb(0,0,0);">Track Orders</h3>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col"></div>
        <div class="col"></div>
        <div class="col"></div>
        <div class="col"></div>
        <div class="col d-flex float-right"><i class="fa fa-arrow-left float-right" style="color: rgb(3,52,97);margin-left: 0px;"></i>
            <h6 class="float-right" style="margin-left: 10px;">January</h6><input class="float-right" type="text" style="width: 25px;height: 20px;margin-left: 10px;" readonly="">
            <h6 class="float-right" style="margin-left: 10px;">to</h6><input class="float-right" type="text" style="width: 25px;height: 20px;margin-left: 10px;" readonly=""><i class="fa fa-arrow-right float-right" style="color: rgb(3,52,97);margin-left: 10px;"></i>
        </div>
    </div>
    <div class="card" id="TableSorterCard"></div>
</div>
<div class="container-fluid">
    <div class="card" id="TableSorterCard"></div>
</div>
<div class="col-12 col-sm-6 col-md-6 col-xl-12">
    <div class="card shadow mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h6 class="text-primary font-weight-bold m-0">Confirmed Purchase Orders</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th style="text-align: center;">Monday</th>
                            <th style="text-align: center;">Tuesday</th>
                            <th style="text-align: center;">Wednesday</th>
                            <th style="text-align: center;">Thursday</th>
                            <th style="text-align: center;">Friday</th>
                            <th style="text-align: center;">Saturday</th>
                            <th style="text-align: center;">Sunday</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        <tr class="text-center">
                            {{#each weeklyDate}}
                                <td class="text-center" style="text-align: center;font-weight: bold;">{{this}}</td>
                            {{/each}}
                        </tr>
                        <tr class="text-center">
                            {{#each weeklyOrders}}
                                <td class="text-center" style="width: 170px">
                                    {{#each this.orders}}
                                        <div href="/view_purchase_details/{{this.supplier_lo}}" class="text-center {{#compareTwoValues this.status 'Pending' operator='==='}}Pending{{/compareTwoValues}}{{#compareTwoValues this.status 'Completed' operator='==='}}Completed{{/compareTwoValues}}{{#compareTwoValues this.status 'Processing' operator='==='}}Processing{{/compareTwoValues}}">
                                            <p class="text-center status-data">LO {{this.supplier_lo}}</p>
                                            <p class="text-center status-data">{{this.product_name}} - {{this.qty}} bags</p>
                                        </div><br>
                                    {{/each}}
                                </td>
                            {{/each}}
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="text-center small mt-4"><span class="mr-2">&nbsp;<i class="fa fa-circle" style="color: rgb(224,112,39);"></i>&nbsp;Pending</span><span class="mr-2"><i class="fas fa-circle text-info"></i>&nbsp;Processing</span><span class="mr-2"><i class="fas fa-circle text-success"></i>&nbsp;Complete</span></div>
        </div>
    </div>
</div>